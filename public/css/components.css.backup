}

@media (max-width: 768px) {
  .menu-toggle {
    display: block;
  }
  
  .navbar-menu {
    position: fixed;
    top: 64px;
    left: -100%;
    width: 100%;
    height: calc(100vh - 64px);
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(var(--glass-blur));
    flex-direction: column;
    padding: var(--spacing-2xl);
    gap: var(--spacing-lg);
    transition: left var(--transition-slow);
    box-shadow: var(--shadow-xl);
  }
  
  .navbar-menu.active {
    left: 0;
  }
}

/* Cards - Modern Design */
.card {
  background: var(--bg-primary);
  border-radius: var(--radius-2xl);
  padding: var(--spacing-xl);
  box-shadow: var(--shadow-md);
  transition: all var(--transition-base);
  border: 1px solid var(--border-light);
  position: relative;
  overflow: hidden;
}

.card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, transparent 0%, rgba(99, 102, 241, 0.02) 100%);
  pointer-events: none;
}

.card.hover-lift {
  cursor: pointer;
}

.card.hover-lift:hover {
  transform: translateY(-8px);
  box-shadow: var(--shadow-xl);
}

.card-header {
  margin-bottom: var(--spacing-lg);
}

.card-title {
  font-size: 1.5rem;
  font-weight: 700;
  margin-bottom: var(--spacing-sm);
  color: var(--text-primary);
}

.card-subtitle {
  color: var(--text-secondary);
  font-size: 0.875rem;
}

.card-body {
  margin-bottom: var(--spacing-lg);
}

.card-footer {
  padding-top: var(--spacing-lg);
  border-top: 1px solid var(--border-light);
}

/* Subject Card - Premium Design */
.subject-card {
  position: relative;
  overflow: hidden;
  cursor: pointer;
  background: var(--bg-primary);
  border: 2px solid transparent;
  transition: all var(--transition-base);
}

.subject-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 5px;
  background: var(--card-color, var(--gradient-primary));
  transition: height var(--transition-base);
}

.subject-card:hover::before {
  height: 100%;
  opacity: 0.08;
}

.subject-card:hover {
  border-color: var(--card-color);
  transform: translateY(-12px) scale(1.02);
  box-shadow: var(--shadow-colored) var(--card-color);
}

.subject-icon {
  font-size: 3.5rem;
  margin-bottom: var(--spacing-lg);
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: 80px;
  height: 80px;
  border-radius: var(--radius-2xl);
  background: linear-gradient(135deg, var(--card-color) 0%, var(--card-color) 100%);
  background-size: 200% 200%;
  color: white;
  transition: all var(--transition-base);
  box-shadow: var(--shadow-md);
}

.subject-card:hover .subject-icon {
  transform: scale(1.1) rotate(5deg);
  box-shadow: var(--shadow-lg);
}

.subject-name {
  font-size: 1.75rem;
  font-weight: 700;
  margin-bottom: var(--spacing-md);
  background: linear-gradient(135deg, var(--text-primary) 0%, var(--card-color) 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.subject-description {
  color: var(--text-secondary);
  font-size: 0.9375rem;
  margin-bottom: var(--spacing-lg);
  line-height: 1.6;
}

/* Buttons - Enhanced Design */
.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: var(--spacing-sm);
  padding: 0.875rem 1.75rem;
  font-size: 1rem;
  font-weight: 600;
  border-radius: var(--radius-xl);
  border: none;
  cursor: pointer;
  transition: all var(--transition-base);
  text-decoration: none;
  font-family: inherit;
  position: relative;
  overflow: hidden;
}

.btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left var(--transition-slow);
}

.btn:hover::before {
  left: 100%;
}

.btn-primary {
  background: var(--gradient-primary);
  color: var(--text-inverse);
  box-shadow: var(--shadow-colored) hsla(239, 84%, 67%, 0.3);
}

.btn-primary:hover {
  transform: translateY(-2px);
  box-shadow: var(--shadow-colored) hsla(239, 84%, 67%, 0.5);
}

.btn-secondary {
  background: var(--gradient-secondary);
  color: var(--text-inverse);
  box-shadow: var(--shadow-colored) hsla(330, 81%, 60%, 0.3);
}

.btn-secondary:hover {
  transform: translateY(-2px);
  box-shadow: var(--shadow-colored) hsla(330, 81%, 60%, 0.5);
}

.btn-outline {
  background: transparent;
  color: var(--primary);
  border: 2px solid var(--primary);
  box-shadow: none;
}

.btn-outline:hover {
  background: var(--primary);
  color: var(--text-inverse);
  box-shadow: var(--shadow-md);
}

.btn-success {
  background: linear-gradient(135deg, var(--success) 0%, hsl(158, 84%, 39%) 100%);
  color: var(--text-inverse);
  box-shadow: var(--shadow-colored) hsla(158, 64%, 52%, 0.3);
}

.btn-success:hover {
  transform: translateY(-2px);
  box-shadow: var(--shadow-colored) hsla(158, 64%, 52%, 0.5);
}

.btn-info {
  background: linear-gradient(135deg, var(--info) 0%, hsl(224, 76%, 48%) 100%);
  color: var(--text-inverse);
  box-shadow: var(--shadow-colored) hsla(217, 91%, 60%, 0.3);
}

.btn-info:hover {
  transform: translateY(-2px);
  box-shadow: var(--shadow-colored) hsla(217, 91%, 60%, 0.5);
}

.btn-sm {
  padding: 0.625rem 1.25rem;
  font-size: 0.875rem;
}

.btn-lg {
  padding: 1.125rem 2.25rem;
  font-size: 1.125rem;
  border-radius: var(--radius-2xl);
}

.btn:disabled {
  opacity: 0.5;
  cursor: not-allowed;
  transform: none !important;
}

/* Forms */
.form-group {
  margin-bottom: var(--spacing-lg);
}

.form-label {
  display: block;
  margin-bottom: var(--spacing-sm);
  font-weight: 600;
  color: var(--text-primary);
}

.form-input,
.form-select,
.form-textarea {
  width: 100%;
  padding: 0.75rem 1rem;
  font-size: 1rem;
  font-family: inherit;
  border: 2px solid var(--border-color);
  border-radius: var(--radius-md);
  background: var(--bg-primary);
  color: var(--text-primary);
  transition: all var(--transition-base);
}

.form-input:focus,
.form-select:focus,
.form-textarea:focus {
  outline: none;
  border-color: var(--primary);
  box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.1);
}

.form-textarea {
  resize: vertical;
  min-height: 120px;
}

.form-error {
  color: var(--error);
  font-size: 0.875rem;
  margin-top: var(--spacing-sm);
}

/* Progress Bar */
.progress-bar {
  width: 100%;
  height: 12px;
  background: var(--bg-tertiary);
  border-radius: var(--radius-full);
  overflow: hidden;
  position: relative;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, var(--primary) 0%, var(--primary-light) 100%);
  border-radius: var(--radius-full);
  transition: width var(--transition-slow);
  position: relative;
  overflow: hidden;
}

.progress-fill::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background: linear-gradient(
    90deg,
    transparent,
    rgba(255, 255, 255, 0.3),
    transparent
  );
  animation: shimmer 2s infinite;
}

@keyframes shimmer {
  0% { transform: translateX(-100%); }
  100% { transform: translateX(100%); }
}

.progress-text {
  font-size: 0.875rem;
  font-weight: 600;
  color: var(--text-secondary);
  margin-top: var(--spacing-sm);
}

/* Checkmark */
.checkmark {
  width: 24px;
  height: 24px;
  border: 2px solid var(--border-color);
  border-radius: var(--radius-sm);
  display: inline-flex;
  align-items: center;
  justify-content: center;
  transition: all var(--transition-base);
  cursor: pointer;
}

.checkmark.checked {
  background: var(--success);
  border-color: var(--success);
  color: white;
}

.checkmark.checked::after {
  content: 'âœ“';
  font-weight: bold;
}

/* Badge */
.badge {
  display: inline-flex;
  align-items: center;
  padding: 0.25rem 0.75rem;
  font-size: 0.75rem;
  font-weight: 600;
  border-radius: var(--radius-full);
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.badge-primary {
  background: rgba(99, 102, 241, 0.1);
  color: var(--primary);
}

.badge-success {
  background: rgba(16, 185, 129, 0.1);
  color: var(--success);
}

.badge-warning {
  background: rgba(245, 158, 11, 0.1);
  color: var(--warning);
}

.badge-error {
  background: rgba(239, 68, 68, 0.1);
  color: var(--error);
}

/* Alert */
.alert {
  padding: var(--spacing-lg);
  border-radius: var(--radius-lg);
  margin-bottom: var(--spacing-lg);
  border-left: 4px solid;
}

.alert-success {
  background: rgba(16, 185, 129, 0.1);
  border-color: var(--success);
  color: #065f46;
}

.alert-error {
  background: rgba(239, 68, 68, 0.1);
  border-color: var(--error);
  color: #991b1b;
}

.alert-info {
  background: rgba(59, 130, 246, 0.1);
  border-color: var(--info);
  color: #1e40af;
}

/* Modal */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(4px);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2000;
  opacity: 0;
  pointer-events: none;
  transition: opacity var(--transition-base);
}

.modal-overlay.active {
  opacity: 1;
  pointer-events: all;
}

.modal {
  background: var(--bg-primary);
  border-radius: var(--radius-2xl);
  padding: var(--spacing-2xl);
  max-width: 600px;
  width: 90%;
  max-height: 90vh;
  overflow-y: auto;
  box-shadow: var(--shadow-2xl);
  transform: scale(0.9);
  transition: transform var(--transition-base);
}

.modal-overlay.active .modal {
  transform: scale(1);
}

/* Footer */
.footer {
  background: var(--bg-dark);
  color: var(--text-inverse);
  padding: var(--spacing-3xl) 0 var(--spacing-xl);
  margin-top: var(--spacing-3xl);
}

.footer-content {
  max-width: 1280px;
  margin: 0 auto;
  padding: 0 var(--spacing-lg);
  text-align: center;
}

.footer-text {
  color: rgba(255, 255, 255, 0.7);
  font-size: 0.875rem;
}
